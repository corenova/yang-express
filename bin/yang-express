#!/usr/bin/env node

var argv = require('minimist')(process.argv.slice(2), {
  boolean: [ 'help' ],
  alias: {
    help: 'h',
	config: 'c',
	port: 'p',
	feature: 'f',
  },
  string: [ 'config', 'feature' ]
});

if (argv.h === true) {
  var help;
  help  = "  Usage: yang-express [options] modules...\n\n";
  help += "  Options:\n";
  help += "    -c, --config <filename>  Use <filename> to retrieve configuration data (default: uses 'config' directory)\n";
  help += "    -f, --feature <name>     Enable one or more features: (restjson, openapi, etc.)\n";
  help += "    -p, --port <number>      Run yang-express on <port>\n";
  console.info(help);
  process.exit();
}

var config = require('config');
if (argv.config) {
  var path = require('path');
  config = config.util.parseFile(path.resolve(argv.config));
}
var express = require('..').eval(config)
var yaml = require('js-yaml');

argv.modules = argv._
express.in('run')
  .invoke(argv)
  .then(function (res) {
	console.info(yaml.dump(res));
  })
  .catch(function (err) {
    console.error(err);
  });
